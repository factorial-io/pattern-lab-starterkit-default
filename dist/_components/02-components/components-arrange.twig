        <div class="fixture-Box"></div>
        <small>Copywrite notice</small>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
      </div>
      <div class="Arrange-sizeFit dev-highlight">
        <div class="fixture-Box"></div>
      </div>
    </div>
  </div>
  <h3 class="Test-it">supports inter-cell gutters</h3>
  <div class="Test-run">
    <div class="Arrange Arrange--withGutter">
      <div class="Arrange-sizeFit">
        <div class="fixture-Box"></div>
      </div>
      <div class="Arrange-sizeFill">
        <div class="dev-highlight">Main content</div>
      </div>
    </div>
  </div>

  <h2 class="Test-describe">.Arrange--middle</h2>
  <h3 class="Test-it">middle-aligns content</h3>
  <div class="Test-run">
    <div class="Arrange Arrange--middle">
      <div class="Arrange-sizeFit dev-highlight">
        <div class="fixture-Box"></div>
      </div>
      <div class="Arrange-sizeFill dev-highlight">
        <p>Main content.</p>
      </div>
    </div>
  </div>

  <h2 class="Test-describe">.Arrange--bottom</h2>
  <h3 class="Test-it">bottom-aligns content</h3>
